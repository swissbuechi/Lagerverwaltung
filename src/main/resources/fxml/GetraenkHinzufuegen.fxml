<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<GridPane xmlns:fx="http://javafx.com/fxml" fx:id="mainPane" xmlns="http://javafx.com/javafx/17.0.2-ea"
          fx:controller="de.mobile.university.Lagerverwaltung.gui.controller.GetraenHinzufuegenController"
          alignment="CENTER" hgap="10" vgap="10">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Name:"/>
    <TextField fx:id="nameField" GridPane.columnIndex="1"/>

    <Label text="Quantity:" GridPane.rowIndex="1"/>
    <TextField fx:id="quantityField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

    <Button text="Add Drink" onAction="#addDrink" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
</GridPane>